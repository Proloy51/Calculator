<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@+id/buttons_layout"
        />
    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"

        android:textAlignment="textEnd"/>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="C"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E46D6D"
                android:id="@+id/bt_c"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="("
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#8F8C8C"
                android:id="@+id/bt_leftbrac"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text=")"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#8F8C8C"
                android:id="@+id/bt_righbrac"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="/"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E4B117"
                android:id="@+id/bt_div"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="7"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="8"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="9"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="*"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E4B117"
                android:id="@+id/bt_multiply"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="4"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="5"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="6"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="+"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E4B117"
                android:id="@+id/bt_plus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="1"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="2"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="3"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="-"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E4B117"
                android:id="@+id/bt_min"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="ac"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E46D6D"
                android:id="@+id/bt_ac"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="0"
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_0"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="."
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turquoise"
                android:id="@+id/bt_dot"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="="
                android:textSize="25dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E4B117"
                android:id="@+id/bt_equal"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>




        </LinearLayout>



    </LinearLayout>


    

</RelativeLayout>